
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" controllerName="tankreporting.controller.View1" displayBlock="true">

<Page id="_IDGenPage1" title="Tank Reporting" titleAlignment="Center" enableScrolling="false">
   <Bar id="_IDGenBar1" class="bar1">
   <contentLeft>
      <ComboBox id="filterDropdown2" change="onProductFilter" placeholder="Product" class="" width="150px" items="{path: 'tanks>/product', sorter: { path: 'ProductGroup', descending: false }}">
         <core:Item id="product_comboBox" key="{tanks>ProductGroup}" text="{tanks>ProductGroup}" />
      </ComboBox>
    </contentLeft>
    <contentLeft>
      <ComboBox id="filterDropdown3" change="onMaterialFilter" placeholder="Material" class="" width="150px" items="{materialFilter>/}">
        <core:Item id="material_comboBox" key="{materialFilter>}" text="{materialFilter>}" />
      </ComboBox> 
    </contentLeft>
    <contentLeft>
      <ComboBox id="filterDropdown" change="onStatusFilterChange" placeholder="Status" class="filter_dropdown dropbox_box" 
        width="150px" items="{tanks>/status}">
        <core:Item id="dialog_statusItemHeader" key="{tanks>Source1}" text="{tanks>target1}" />
      </ComboBox>
    </contentLeft>
    <contentLeft>
        <Button id="filter_btn" text="Go" press="onFilterGoPressed" type="Ghost"></Button>
        <Button id="refresh_filter_btn" icon="sap-icon://refresh" press="onFilterRefreshPressed" type="Ghost"></Button>
    </contentLeft>
    <contentLeft>
        <HBox id="inventory_text" class="sapUiLargeMarginBegin">
           <Text text="Total inventory : " id="total_inventory" class="header_inventory"/>
           <Text text="{tanks>/totalQuantity}" id="total_calculated" class="calculated_inventory"/>
        </HBox>
    </contentLeft>
    <contentRight>

   	<SearchField id="searchField" width="70%" placeholder="Search Tank" enableSuggestions="true" suggest=".onSuggest"
      search=".onSearch" suggestionItems="{	path: 'tanks>/tankData'}">
			<SuggestionItem id="_IDGenSuggestionItem1" text="{tanks>Seqnr}" key="{tanks>Seqnr}" />
		</SearchField>
    </contentRight>
  </Bar>


   <ScrollContainer id="_IDGenScrollContainer1" height="80vh" horizontal="false" vertical="true">
     <FlexBox id="tank_layout" class="tankFlexContainer sapUiMediumMarginBottom" direction="Row" wrap="Wrap" height="" items="{path: 'tanks>/tankData'}">
      <VBox id="_IDGenVBox2" class="tank_box">
         <!-- this vbox is using to create tank shape -->
        <VBox class="container" id="container">
           <!-- this vbox is used for liquid level inside tank -->
             <!-- <VBox class="inner_level" id="tank_level"> -->
            <!-- <VBox id="tank_level" height="{ path: 'tanks>/QuanSku', formatter: '.calculatePercentage' }"> -->
           <VBox id="tank_level" height="{path: 'tanks>QuanSku', formatter: '.formatHeight', parts: ['tanks>ADQNTP', 'tanks>Kapaz'] }">

           <!-- ... other controls specific to the inner level -->
           </VBox>
         <!-- <Button id="_IDGenButton1" text="" class="show_button" press="onShowInfoPress" tooltip="{path: 'tanks>Socnr', 
              formatter: '.formatTooltip',
              parts: ['tanks>Socnr', 'tanks>Lgort','tanks>QuanLvc']}"/> -->
         <Button id="_IDGenButton1" text="" class="show_button" press="onShowInfoPress" tooltip="clicked on tank to know more details"/>
              
         <Link id="_IDGenLink1" class="tank_no Tank_text" press="onShowInfoPress" text="{tanks>Lgort}"/>
         <!-- <Link id="_IDGenLink2" class="tank_no tank_text2 sapUiLargeMarginTop" press="onShowInfoPress" text="Quantity-{tanks>QuanSku}"/> -->
         <!-- <Link id="_IDGenLink3" class="tank_no tank_text2" press="onShowInfoPress" text="{path: 'tanks>Matnr', formatter: 'formatter.classText'}"/> -->
         <!-- <Link id="_IDGenLink3" class="tank_no tank_text2" press="onShowInfoPress" text="{tanks>QuanSku}"/> -->
         <!-- <Link id="_IDGenLink4" class="tank_no tank_text2" press="onShowInfoPress" text="Density-"/> -->
        </VBox>
       <VBox id="text_data2" class="text_tank">
        <HBox id="qty_text" class="qty_text">
          <Text id="Text3" class=""  text="Product:"/>  
          <Text id="Text4" class=""  text="{path:'tanks>Matnr',formatter:'.formatProductText'}"/>  
        </HBox>
        <HBox id="product_txt" class="product_text">
          <Text id="Text1" class=""  text="Quantity:"/>  
          <Text id="Text2" class=""  text="{parts: [{path: 'tanks>ADQNTP'}, {path: 'tanks>Kapaz'}], formatter: '.formattextHeightPercentage'}"/>  
        </HBox>
      </VBox>
      </VBox>
    </FlexBox>
   </ScrollContainer>
  </Page>
</mvc:View>